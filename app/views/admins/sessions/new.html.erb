<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus"  %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", type: "password" %>
            </div>
            <div class="checkbox">
              <label>
                <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>Remmeber-Me
                </div>
                <% end %>

              </label>
            </div>
            <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
          </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="bb-growl-1" class="bb-alert alert alert-danger" style="display: none">
    <span>Default alert</span>
</div>
<% flash.each do |key, value| %>
<script>
    notify.init({
      "selector": "#bb-growl-1"
    });
  
    notify.show( '<%= value %>' )
</script>
<% end %>

