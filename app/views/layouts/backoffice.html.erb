<!DOCTYPE html>
<html lang="en">

<head>

  <title>EcomerceUdemy</title>
  <%= stylesheet_link_tag    'application' %>
  <%= stylesheet_link_tag    'backoffice/backoffice' %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'backoffice/backoffice'  %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>
<body>
  <%= render partial: "layouts/backoffice_shared/navigation" %>
  <!-- Page Content -->
  <div id="page-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%= yield %>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- /#page-wrapper -->
      
      <div id="bb-growl" class="bb-alert alert alert-info" style="display: none">
          <span>Default alert</span>
      </div>
      <div id="bb-growl-1" class="bb-alert alert alert-danger" style="display: none">
          <span>Default alert</span>
      </div>
  
</body>
<% if notice %>
<script>
    notify.init({
      "selector": "#bb-growl"
    });
  
    notify.show( '<%= notice %>' )
</script>
<% end %>

<% if alert %>
<script>
    notify.init({
      "selector": "#bb-growl-1"
    });
  
    notify.show( '<%= alert %>' )
</script>
<% end %>
</html>